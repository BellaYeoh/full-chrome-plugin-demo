{
  "manifest_version": 2,
  "name": "Chrome插件demo",
  "version": "1.0",
  "description": "chrome扩展常用示例",
  "author": "yeoh",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["storage", "background"]
}
